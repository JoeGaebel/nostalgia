<div class="demo user-login">
  <% if !user_signed_in? %>
    <%= link_to "Login", login_path %>/<%= link_to "Sign up", new_user_registration_path %>
  <% else %>
    <%= link_to "Back to memories", memories_path, class: "josefin" %>
  <% end %>
</div>

<div class="container">
  <div class="header user-header">
    <span class="title"><%= @memory.name %></span>
  </div>

  <div class="viewer">
    <%= render "shared/memory_application", hideNavBar: true, style: "width: 100%; height: 600px;" %>
  </div>

  <div class="josefin description show-description">
    <%= @memory.description %>
  </div>
</div>

<%= render "layouts/feedback" %>