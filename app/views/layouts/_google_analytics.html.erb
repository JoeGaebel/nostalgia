<% if Rails.env.production? %>
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-113000357-1"></script>
  <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-113000357-1');
  </script>

  <% if current_user %>
    <script>
      gtag('set', {'user_id': '<%= current_user.id %>'});
    </script>
  <% end %>
<% end %>
