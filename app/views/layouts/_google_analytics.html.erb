<% if Rails.env.production? %>
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-113000357-1"></script>
  <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-113000357-1');
      <% if current_user %>
        gtag('set', {'user_id': '<%= current_user.id %>'});
      <% end %>
  </script>
<% end %>
